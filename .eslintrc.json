{
  "env": {
      "browser": true,
      "node": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier"
  ],
  "overrides": [
    {
      "files": [
        "**/*.spec.js",
        "**/*.spec.jsx"
      ],
      "env": {
        "jest": true
      }
    }
  ],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
  },
  "plugins": [
      "react"
  ],
  "rules": {
      "quotes": ["error", "single"],
      "jsx-quotes": ["error", "prefer-single"],
      "indent": ["error", 2],
      "semi": "error",
      "react/prop-types": 0,
      "no-unused-vars": "warn",
      "comma-dangle": ["error", "always-multiline"],
      "object-curly-spacing": ["error", "always"]
  }
}
